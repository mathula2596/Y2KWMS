<Page x:Class="Y2KWMS.View.Pages.Report.Index"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Y2KWMS.View.Pages.Report"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1100"
      Title="Index" Style="{DynamicResource pageStyle}">

    <Border CornerRadius="5" Background="{DynamicResource SecundaryBackgroundColor}" Padding="10">
        <StackPanel>
            <StackPanel>
                <TextBlock Text="View Project Details" Style="{DynamicResource HeadingStyle}"/>
            </StackPanel>
            <ScrollViewer  HorizontalScrollBarVisibility="Auto"  Height="500" VerticalScrollBarVisibility="Visible"  CanContentScroll="True">

                <StackPanel x:Name="RootGrid" HorizontalAlignment="Left" VerticalAlignment="Center">

                </StackPanel>
            </ScrollViewer>
        </StackPanel>
    </Border>
</Page>
